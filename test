    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script>
        $(function () {
            $("#checkAgreement").click(function () {
                var val = $('input:checkbox[name="checkAgreement"]:checked').val();
                if (val == null) {
                    $("#agreeBtn").addClass('btnDisabled')
                } else {
                    $("#agreeBtn").removeClass('btnDisabled')
                }
            })
            $('#agreeBtn').click(function () {
                var check = $("input[name='checkAgreement']:checked").length;
                if (check == 0) {
                    $('.agree__check--error').text('請確認勾選同意事項!');
                    return false;
                } else {
                    return true;
                }
            })
            $('#checkAgreement').click(function () {
                var check = $("input[name='checkAgreement']:checked").length;
                if (check !== 0) {
                    $('.agree__check--error').text("");
                }
            })
            $('.accordion__title').on('click', function (e) {
                $(this).next('div.accordion__content').slideToggle();
                $(this).toggleClass('active');
                e.preventDefault();
            });

        })
    </script>

